@model IEnumerable<CrudNativoBiblioteca.Models.Prestamo>
@{
    ViewData["Title"] = "Préstamos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Préstamos</h1>
<div class="container">
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Préstamos</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Prestamos">Agregar Nuevo Préstamo</a>
        </div>
    </div>
</div>
<div class="row">
    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.Id)</td>
                    <td>Libro</td>
                    <td>Usuario</td>
                    <td>@Html.DisplayNameFor(m => m.FechaInicio)</td>
                    <td>@Html.DisplayNameFor(m => m.FechaFin)</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Libro?.Titulo</td>
                        <td>@item.Usuario?.Nombre</td>
                        <td>@item.FechaInicio.ToShortDateString()</td>
                        <td>@item.FechaFin.ToShortDateString()</td>
                        <td>
                            <a asp-controller="Prestamos" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Prestamos" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No existen registros</p>
    }
</div>
